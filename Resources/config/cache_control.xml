<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="liip_cache_control.response_listener" class="Liip\CacheControlBundle\Response\CacheControlListener">
            <tag name="kernel.listener" event="onCoreResponse" />
        </service>

        <service id="liip_cache_control.request_matcher" class="Symfony\Component\HttpFoundation\RequestMatcher" public="false" />

        <service id="liip_cache_control.varnish" class="Liip\CacheControlBundle\Helper\Varnish">
            <argument>%liip_cache_control.domain%</argument>
            <argument>%liip_cache_control.varnishes%</argument>
            <argument>%liip_cache_control.port%</argument>
        </service>

        <service id="liip_cache_control.cache_authorization_listener" class="Liip\CacheControlBundle\Request\CacheAuthorizationListener">
            <tag name="kernel.listener" event="onCoreRequest" priority="-129" />
        </service>

    </services>
</container>
